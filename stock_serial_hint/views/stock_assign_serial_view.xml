<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_assign_serial_inherit_last_serial"
            model="ir.ui.view">
        <field name="name">stock.assign.serial.inherit.last.serial</field>
        <field name="model">stock.assign.serial</field>
        <field name="inherit_id" ref="stock.view_assign_serial_numbers"/>
        <field name="arch" type="xml">

            <!-- Insert Last Serial right after Product -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="last_serial" readonly="1"/>
            </xpath>

        </field>
    </record>
</odoo>
