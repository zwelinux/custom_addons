<odoo>
  <record id="view_fin_expense_tree" model="ir.ui.view">
    <field name="name">finance.expense.tree</field>
    <field name="model">finance.expense</field>
    <field name="arch" type="xml">
      <tree>
        <field name="date"/>
        <field name="amount"/>
        <field name="wallet_id"/>
        <field name="category_id"/>
        <field name="merchant"/>
        <field name="method"/>
      </tree>
    </field>
  </record>

  <record id="view_fin_expense_form" model="ir.ui.view">
    <field name="name">finance.expense.form</field>
    <field name="model">finance.expense</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="date"/>
            <field name="amount"/>
            <field name="currency_id"/>
            <field name="wallet_id"/>
            <field name="category_id"/>
            <field name="merchant"/>
            <field name="method"/>
            <field name="description"/>
            <field name="attachment" filename="attachment_filename"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fin_expense" model="ir.actions.act_window">
    <field name="name">Expenses</field>
    <field name="res_model">finance.expense</field>
    <field name="view_mode">tree,form</field>
  </record>

<record id="view_fin_expense_search" model="ir.ui.view">
    <field name="name">finance.expense.search</field>
    <field name="model">finance.expense</field>
    <field name="arch" type="xml">
      <search>
        <field name="description" string="Description"/>
        <!-- You can add more fields/filters here, but avoid Python date math in domains -->
      </search>
    </field>
  </record>

  <!-- attach the search view to the action -->
  <record id="action_fin_expense" model="ir.actions.act_window">
    <field name="search_view_id" ref="view_fin_expense_search"/>
  </record>
</odoo>
