<odoo>
  <record id="view_fin_income_tree" model="ir.ui.view">
    <field name="name">finance.income.tree</field>
    <field name="model">finance.income</field>
    <field name="arch" type="xml">
      <tree>
        <field name="date"/>
        <field name="amount"/>
        <field name="wallet_id"/>
        <field name="type"/>
        <field name="source"/>
      </tree>
    </field>
  </record>

  <record id="view_fin_income_form" model="ir.ui.view">
    <field name="name">finance.income.form</field>
    <field name="model">finance.income</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="date"/>
            <field name="amount"/>
            <field name="currency_id"/>
            <field name="wallet_id"/>
            <field name="type"/>
            <field name="source"/>
            <field name="note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fin_income" model="ir.actions.act_window">
    <field name="name">Incomes</field>
    <field name="res_model">finance.income</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
