<odoo>
  <!-- Debt Accounts: list -->
  <record id="view_fin_debt_account_tree" model="ir.ui.view">
    <field name="name">finance.debt.account.tree</field>
    <field name="model">finance.debt.account</field>
    <field name="arch" type="xml">
      <tree decoration-success="is_settled">
        <field name="name"/>
        <field name="type"/>
        <field name="principal"/>
        <field name="apr"/>
        <field name="min_payment"/>
        <field name="due_day"/>
        <field name="total_paid"/>
        <field name="is_settled"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <!-- Debt Accounts: search (handy filters) -->
  <record id="view_fin_debt_account_search" model="ir.ui.view">
    <field name="name">finance.debt.account.search</field>
    <field name="model">finance.debt.account</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <filter name="settled" string="Settled" domain="[('is_settled','=',True)]"/>
        <filter name="active_only" string="Active" domain="[('active','=',True)]"/>
        <group expand="0" string="Type">
          <filter name="type_cc" string="Credit Card" domain="[('type','=','credit_card')]"/>
          <filter name="type_loan" string="Loan" domain="[('type','=','loan')]"/>
          <filter name="type_family" string="Family" domain="[('type','=','family')]"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Debt Accounts: form -->
  <record id="view_fin_debt_account_form" model="ir.ui.view">
    <field name="name">finance.debt.account.form</field>
    <field name="model">finance.debt.account</field>
    <field name="arch" type="xml">
      <form string="Debt Account">
        <header>
            <button name="%(action_fin_debt_payment)d" type="action"
                    class="oe_stat_button" icon="fa-credit-card"
                    help="Open payments for this account"
                    context="{'search_default_account_id': active_id}">
                <field name="total_paid" widget="statinfo" string="Paid"/>
            </button>
            <span class="o_form_label text-success"
                    modifiers="{'invisible': [['is_settled','=',False]]}"
                    style="margin-left: 8px;">
                SETTLED
            </span>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="type"/>
              <field name="active"/>
            </group>
            <group>
              <field name="principal"/>
              <field name="apr"/>
              <field name="min_payment"/>
              <field name="due_day"/>
              <field name="start_date"/>
              <field name="currency_id"/>
            </group>
          </group>
          <group>
            <field name="total_paid" readonly="1"/>
            <field name="is_settled" readonly="1"/>
          </group>
          <notebook>
            <page string="Payments">
              <field name="payment_ids" context="{'default_account_id': active_id}">
                <tree editable="bottom">
                  <field name="date"/>
                  <field name="amount"/>
                  <field name="interest_applied" readonly="1"/>
                  <field name="principal_applied" readonly="1"/>
                  <field name="extra_payment" readonly="1"/>
                </tree>
                <form>
                  <group>
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="currency_id" readonly="1"/>
                  </group>
                </form>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Payments: list -->
  <record id="view_fin_debt_payment_tree" model="ir.ui.view">
    <field name="name">finance.debt.payment.tree</field>
    <field name="model">finance.debt.payment</field>
    <field name="arch" type="xml">
      <tree>
        <field name="date"/>
        <field name="account_id"/>
        <field name="amount"/>
        <field name="interest_applied"/>
        <field name="principal_applied"/>
        <field name="extra_payment"/>
      </tree>
    </field>
  </record>

  <!-- Payments: form -->
  <record id="view_fin_debt_payment_form" model="ir.ui.view">
    <field name="name">finance.debt.payment.form</field>
    <field name="model">finance.debt.payment</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="date"/>
            <field name="account_id"/>
            <field name="amount"/>
            <field name="currency_id" readonly="1"/>
            <field name="interest_applied" readonly="1"/>
            <field name="principal_applied" readonly="1"/>
            <field name="extra_payment" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Actions -->
  <record id="action_fin_debt_account" model="ir.actions.act_window">
    <field name="name">Debt Accounts</field>
    <field name="res_model">finance.debt.account</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_fin_debt_account_search"/>
  </record>

  <record id="action_fin_debt_payment" model="ir.actions.act_window">
    <field name="name">Debt Payments</field>
    <field name="res_model">finance.debt.payment</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'search_default_group_by_account_id': 1}</field>
  </record>
</odoo>
