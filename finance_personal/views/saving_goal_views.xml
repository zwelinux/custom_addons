<odoo>
  <!-- Goals -->
  <record id="view_fin_goal_tree" model="ir.ui.view">
    <field name="name">finance.saving.goal.tree</field>
    <field name="model">finance.saving.goal</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="target_amount"/>
        <field name="current_amount"/>
        <field name="deadline"/>
        <field name="priority"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_fin_goal_form" model="ir.ui.view">
    <field name="name">finance.saving.goal.form</field>
    <field name="model">finance.saving.goal</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="target_amount"/>
            <field name="current_amount" readonly="1"/>
            <field name="deadline"/>
            <field name="priority"/>
            <field name="currency_id"/>
            <field name="active"/>
          </group>
          <notebook>
            <page string="Transfers">
              <field name="transfer_ids" context="{'default_goal_id': active_id}">
                <tree editable="bottom">
                  <field name="date"/>
                  <field name="wallet_id"/>
                  <field name="amount"/>
                  <field name="note"/>
                </tree>
                <form>
                  <group>
                    <field name="date"/>
                    <field name="wallet_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="note"/>
                  </group>
                </form>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fin_goal" model="ir.actions.act_window">
    <field name="name">Saving Goals</field>
    <field name="res_model">finance.saving.goal</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Transfers (standalone menu/list) -->
  <record id="view_fin_transfer_tree" model="ir.ui.view">
    <field name="name">finance.transfer.tree</field>
    <field name="model">finance.transfer</field>
    <field name="arch" type="xml">
      <tree>
        <field name="date"/>
        <field name="wallet_id"/>
        <field name="goal_id"/>
        <field name="amount"/>
        <field name="note"/>
      </tree>
    </field>
  </record>

  <record id="view_fin_transfer_form" model="ir.ui.view">
    <field name="name">finance.transfer.form</field>
    <field name="model">finance.transfer</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="date"/>
            <field name="wallet_id"/>
            <field name="goal_id"/>
            <field name="amount"/>
            <field name="currency_id"/>
            <field name="note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fin_transfer" model="ir.actions.act_window">
    <field name="name">Transfers</field>
    <field name="res_model">finance.transfer</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
