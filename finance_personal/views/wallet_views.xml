<odoo>
  <record id="view_fin_wallet_tree" model="ir.ui.view">
    <field name="name">finance.wallet.tree</field>
    <field name="model">finance.wallet</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="type"/>
        <field name="currency_id"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_fin_wallet_form" model="ir.ui.view">
    <field name="name">finance.wallet.form</field>
    <field name="model">finance.wallet</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="type"/>
            <field name="currency_id"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_fin_wallet" model="ir.actions.act_window">
    <field name="name">Wallets</field>
    <field name="res_model">finance.wallet</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
